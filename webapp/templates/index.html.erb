<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="css/bootstrap.min.css" rel="stylesheet">

    <script src="//code.jquery.com/jquery-2.1.0.min.js"></script>
    <script src="javascript/bootstrap.min.js"></script>

    <script src="javascript/lib/underscore-min.js"></script>
    <script src="javascript/lib/classy.js"></script>
    <script src="javascript/lib/moment.min.js"></script>
    <script src="javascript/rsvp-latest.js"></script>
    <script src="javascript/hammer.min.js"></script>

    <script src="javascript/results_parser.js"></script>
    <script src="javascript/relative_converter.js"></script>
    <script src="javascript/deep_object_defaults.js"></script>
    <script src="javascript/graphs_plotter.js"></script>
    <script src="javascript/totals_display.js"></script>

    <script src="javascript/main.js"></script>

    <script type="text/javascript" src="javascript/jqplot-1.0.8/jquery.jqplot.min.js"></script>
    <script type="text/javascript" src="javascript/jqplot-1.0.8/plugins/jqplot.barRenderer.min.js"></script>
    <script type="text/javascript" src="javascript/jqplot-1.0.8/plugins/jqplot.pointLabels.min.js"></script>
    <link href="css/jquery.jqplot.min.css" rel="stylesheet">

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    <style>
      #loading_spinner { display: none; }
      #error_icon      { display: none; color: red }
      .numeric         { padding: 15px; margin-bottom: 15px; text-align: center; }
      .energy_spinner  { padding: 15px; visibility: hidden; }
      .current_energy  { -webkit-transition: background-color 1s; transition: background-color 1s; }
    </style>
  </head>
  <body data-url-prefix="<%= url("", false) %>" data-current-url="<%= url("energy/current", false) %>">
    <div class="container">
      <div class="row">
        <h3 class="col-sm-8 col-sm-offset-2"><span class="header"></span>
          <i id="loading_spinner" class="fa fa-spinner fa-spin"></i>
          <i id="error_icon" class="fa fa-exclamation-triangle"></i>
        </h3>
      </div>
      <div class="row">
        <div class="col-xs-offset-1 col-xs-1 energy_spinner">
          <i class="fa fa-spinner fa-spin"></i>
        </div>
        <div class="bg-info col-xs-2 col-sm-2 numeric current_energy">-</div>
        <div class="bg-info col-xs-2 col-sm-2 numeric energy_totals">-</div>
        <div class="bg-info col-xs-2 col-sm-2 numeric gas_totals">-</div>
      </div>
      <div class="row">
        <div class="col-sm-5 col-sm-offset-1 col-xs-10 col-xs-offset-1 img-responsive graph" id="stroom" style="height: 300px"></div>
        <div class="col-sm-5 col-xs-10 col-sm-offset-0 col-xs-offset-1 img-responsive graph" id="gas" style="height: 300px"></div>
       </div>

      <div class="row">
        <button class="btn btn-lg btn-default previous col-sm-offset-1 col-sm-5 col-xs-6">Previous</button>
        <button class="btn btn-lg btn-default next col-sm-5 col-xs-6">Next</button>
        <button class="btn btn-default today col-sm-offset-1 col-sm-10 col-xs-12">Today</button>
      </div>
    </div>
  </body>

  <script>
    $(function() {
      window.main = Main();

      window.main.start();
    });
  </script>
</html>
